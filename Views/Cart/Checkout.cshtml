@model IEnumerable<SneakerShop.Models.CartItem>
@{ ViewData["Title"] = "Checkout"; }

<div class="row g-5">
    <div class="col-md-7">
        <h4 class="mb-4 fw-bold text-uppercase">Shipping Details</h4>
        <form asp-action="ProcessCheckout" method="post" class="bg-white p-4 shadow-sm">
            <div class="row g-3 mb-4">
                <div class="col-sm-6">
                    <label class="form-label text-muted text-uppercase small fw-bold">First Name</label>
                    <input type="text" class="form-control rounded-0" required>
                </div>
                <div class="col-sm-6">
                    <label class="form-label text-muted text-uppercase small fw-bold">Last Name</label>
                    <input type="text" class="form-control rounded-0" required>
                </div>
                <div class="col-12">
                    <label class="form-label text-muted text-uppercase small fw-bold">Email</label>
                    <input type="email" class="form-control rounded-0" required>
                </div>
                <div class="col-12">
                    <label class="form-label text-muted text-uppercase small fw-bold">Address</label>
                    <input type="text" class="form-control rounded-0" required>
                </div>
            </div>
            
            <hr class="my-4">
            <h4 class="mb-4 fw-bold text-uppercase">Payment</h4>
            <div class="row g-3 mb-4">
                <div class="col-md-12">
                    <label class="form-label text-muted text-uppercase small fw-bold">Credit Card Number</label>
                    <input type="text" class="form-control rounded-0" required>
                </div>
            </div>
            <button class="btn btn-dark btn-lg w-100 mt-3" type="submit">Place Order</button>
        </form>
    </div>
    
    <div class="col-md-5">
        <div class="card p-4 bg-light">
            <h5 class="mb-4 fw-bold text-uppercase border-bottom pb-3">Order Summary</h5>
            <ul class="list-group list-group-flush mb-3 bg-transparent">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between lh-sm bg-transparent px-0">
                        <div>
                            <h6 class="my-0 fw-bold">@item.Product.Name</h6>
                            <small class="text-muted">Quantity: @item.Quantity</small>
                        </div>
                        <td class="py-3">
    <div class="fw-bold">@item.Product.Name</div>
    <div class="small text-muted text-uppercase">Size: @item.Size</div>
</td>
                        <span class="text-muted">$@((item.Product.Price * item.Quantity).ToString("0.00"))</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between bg-transparent px-0 mt-3 pt-3 border-top">
                    <span class="fw-bold text-uppercase">Total</span>
                    <strong class="fs-5">$@(Model.Sum(x => x.Product.Price * x.Quantity).ToString("0.00"))</strong>
                </li>
            </ul>
        </div>
    </div>
</div>