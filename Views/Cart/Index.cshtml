@model IEnumerable<SneakerShop.Models.CartItem>
@{ ViewData["Title"] = "Cart"; }

<h2 class="mb-5 fw-bold text-uppercase">Your Cart</h2>

@if (!Model.Any())
{
    <div class="text-center py-5 bg-white shadow-sm">
        <p class="lead text-muted mb-4">Your cart is currently empty.</p>
        <a asp-controller="Home" asp-action="Shop" class="btn btn-dark">Return to Shop</a>
    </div>
}
else
{
    <div class="bg-white p-4 shadow-sm">
       <table class="table align-middle table-borderless">
            <thead class="border-bottom">
                <tr>
                    <th class="text-uppercase text-muted">Item</th>
                    <th class="text-uppercase text-muted">Price</th>
                    <th class="text-uppercase text-muted">Qty</th>
                    <th class="text-uppercase text-muted text-end">Total</th>
                    <th></th> </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-bottom">
                        <td class="py-3">
                            <div class="fw-bold">@item.Product.Name</div>
                            <div class="small text-muted text-uppercase">Size: @item.Size</div>
                        </td>
                        <td class="py-3">$@item.Product.Price.ToString("0.00")</td>
                        <td class="py-3">@item.Quantity</td>
                        <td class="py-3 text-end fw-bold">$@((item.Product.Price * item.Quantity).ToString("0.00"))</td>
                        
                        <td class="py-3 text-end">
                            <a asp-action="RemoveFromCart" asp-route-id="@item.Product.Id" asp-route-size="@item.Size" class="text-danger text-decoration-none" title="Remove Item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .471-.53Zm5.058 0a.5.5 0 0 1 .471.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold py-4 text-uppercase">Subtotal:</td>
                    <td class="fw-bold fs-4 text-end py-4">$@(Model.Sum(x => x.Product.Price * x.Quantity).ToString("0.00"))</td>
                    <td></td> </tr>
            </tfoot>
        </table>
        <div class="text-end mt-4">
            <a asp-action="Checkout" class="btn btn-dark btn-lg">Proceed to Checkout</a>
        </div>
    </div>
}