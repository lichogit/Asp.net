@model SneakerShop.Models.Product
@{ ViewData["Title"] = "Add New Sneaker"; }

<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bolder text-uppercase">Add New Sneaker</h2>
                <a asp-action="Index" class="btn btn-outline-dark rounded-0 fw-bold text-uppercase">Back to Inventory</a>
            </div>

            <div class="bg-white p-5 shadow-sm border">
                <form asp-action="Create" method="post">
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label small fw-bold text-muted text-uppercase"></label>
                        <input asp-for="Name" class="form-control rounded-0" placeholder="e.g. Air Max Retro" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label small fw-bold text-muted text-uppercase"></label>
                        <textarea asp-for="Description" class="form-control rounded-0" rows="3" required></textarea>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label small fw-bold text-muted text-uppercase"></label>
                            <div class="input-group">
                                <span class="input-group-text rounded-0 bg-light border-end-0">$</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control rounded-0 border-start-0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ImageUrl" class="form-label small fw-bold text-muted text-uppercase">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control rounded-0" placeholder="https://..." required />
                            <div class="form-text small">Paste a direct link to an image.</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg w-100 rounded-0 fw-bold text-uppercase">Save Sneaker to Database</button>
                </form>
            </div>
        </div>
    </div>
</div>