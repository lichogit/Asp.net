@model IEnumerable<SneakerShop.Models.Product>
@{ ViewData["Title"] = "Admin Dashboard"; }

<div class="container mt-5 pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bolder text-uppercase">Inventory Management</h2>
        <a asp-action="Create" class="btn btn-dark rounded-0 fw-bold text-uppercase">+ Add New Sneaker</a>
    </div>

    <div class="bg-white p-4 shadow-sm border">
        <table class="table align-middle table-hover mb-0">
            <thead class="table-light text-uppercase small text-muted">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 80px;">
                            <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded" style="max-height: 50px; object-fit: cover;">
                        </td>
                        <td class="fw-bold">@item.Name</td>
                        <td>$@item.Price.ToString("0.00")</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 fw-bold me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-0 fw-bold">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>