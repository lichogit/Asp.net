@model SneakerShop.Models.Product
@{ ViewData["Title"] = "Delete Sneaker"; }

<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-white p-5 shadow-sm border text-center">
                <h2 class="fw-bolder text-uppercase text-danger mb-3">Delete Sneaker?</h2>
                <p class="text-muted mb-4">Are you absolutely sure you want to delete this product? This action cannot be undone.</p>

                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover;">
                <h4 class="fw-bold text-uppercase">@Model.Name</h4>
                <p class="text-muted">$@Model.Price.ToString("0.00")</p>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-dark w-50 rounded-0 fw-bold text-uppercase">Cancel</a>
                        <button type="submit" class="btn btn-danger w-50 rounded-0 fw-bold text-uppercase">Yes, Delete It</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>