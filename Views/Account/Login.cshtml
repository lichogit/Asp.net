@model SneakerShop.Models.LoginViewModel
@{ ViewData["Title"] = "Sign In"; }

<div class="row justify-content-center mt-5 pt-5">
    <div class="col-md-5">
        <div class="bg-white p-5 shadow-sm border text-center">
            <h2 class="fw-bolder text-uppercase mb-4">Welcome Back</h2>
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger rounded-0 border-0 small mb-4 text-start">
                    <div asp-validation-summary="All" class="text-danger mb-0"></div>
                </div>
            }
            
            <form method="post" asp-controller="Account" asp-action="Login">
                <input type="email" asp-for="Email" class="form-control form-control-lg rounded-0 mb-3" placeholder="Email Address" required>
                <input type="password" asp-for="Password" class="form-control form-control-lg rounded-0 mb-4" placeholder="Password" required>
                <button type="submit" class="btn btn-dark btn-lg w-100 rounded-0 fw-bold text-uppercase mb-3">Sign In</button>
            </form>

            <div class="d-flex align-items-center my-4">
                <hr class="flex-grow-1">
                <span class="mx-3 text-muted small text-uppercase fw-bold">Or continue with</span>
                <hr class="flex-grow-1">
            </div>

            <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="d-flex gap-2">
                <button type="submit" name="provider" value="Google" class="btn btn-outline-dark w-100 rounded-0 fw-bold">Google</button>
                
            </form>

            <p class="mt-4 mb-0 text-muted small">Don't have an account? <a asp-action="Register" class="text-dark fw-bold">Sign Up</a></p>
        </div>
    </div>
</div>